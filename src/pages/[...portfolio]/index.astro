---
import Layout from '~/layouts/PageLayout.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import { getStaticPathsPortfolioPost } from '~/utils/portfolio';
import type { GetStaticPaths } from 'astro';

export const getStaticPaths = (async () => {
  return await getStaticPathsPortfolioPost();
}) satisfies GetStaticPaths;

const { portfolio } = Astro.props;

const metadata = {
  title: portfolio.title,
};
---

<Layout metadata={metadata}>
  <!-- Hero2 Widget ******************* -->

  <Hero2
    tagline={portfolio.category}
    title={portfolio.title}
    subtitle={portfolio.excerpt}
    actions={[
      {
        variant: 'primary',
        text: 'Visit Website',
        href: portfolio.metadata?.canonical,
        icon: 'tabler:square-rounded-arrow-right',
        target: '_blank',
      },
    ]}
    image={{
      src: portfolio.image,
      alt: portfolio.title,
    }}
  />
</Layout>
