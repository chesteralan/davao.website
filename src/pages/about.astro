---
import Hero from '~/components/widgets/Hero.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'About us',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="About us"
    image={{
      src: 'https://images.unsplash.com/photo-1559136555-9303baea8ebd?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Caos Image',
    }}
  >
    <Fragment slot="title">
      We help Davao businesses shine online with <span class="text-accent dark:text-white"
        >professional, mobile-ready websites</span
      > that work as hard as you do.
    </Fragment>

    <Fragment slot="subtitle">
      At DWDS, we help businesses in Davao and beyond build a strong online presence through modern, reliable, and
      results-driven websites. We believe that every brand deserves a digital home that not only looks great but also
      works seamlessly to attract customers and grow sales.
    </Fragment>
  </Hero>

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="Why Choose Us?"
    subtitle="We combine local expertise with modern web solutions to create websites that are simple, reliable, and built to help your business grow. Our team focuses on your goals, making the process easy, transparent, and effective—so you get a website that truly works for you."
    items={[
      {
        title: 'Local Expertise with Global Standards',
        description: 'We combine the creativity of local talent with world-class technologies.',
      },
      {
        title: 'Client-Focused Approach',
        description: 'Your goals guide our process, ensuring websites that truly serve your business.',
      },
      {
        title: 'Affordable & Scalable Solutions',
        description: 'We deliver value without compromising quality.',
      },
    ]}
  />

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title=""
    subtitle="Based in the heart of Davao City, we’re passionate about helping local businesses, startups, and professionals succeed online. Whether you’re launching your first website or upgrading an old one, we’re here to make the process simple, transparent, and effective."
    isReversed={true}
    callToAction={{
      text: 'View Our Services',
      href: '/#services',
    }}
    items={[
      {
        title: 'Our Mission',
        description:
          'To empower businesses in Davao and across the Philippines with innovative, affordable, and impactful web solutions that help them thrive in the digital age.',
        icon: 'tabler:globe',
      },
      {
        title: 'Our Vision',
        description:
          'To become the most trusted web development partner in Mindanao, known for creativity, reliability, and results.',
        icon: 'tabler:message-star',
      },
    ]}
  />
</Layout>
