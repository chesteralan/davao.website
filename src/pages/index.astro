---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

import Features2 from '~/components/widgets/Features2.astro';
import Features from '~/components/widgets/Features.astro';
import Stats from '~/components/widgets/Stats.astro';
import Features3 from '~/components/widgets/Features3.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Brands from '~/components/widgets/Brands.astro';

const metadata = {
  title: 'From Davao to the World — Your Digital Partner',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="Davao Web Development Services"
    actions={[
      {
        variant: 'primary',
        
        text: 'Sign Up Now',
        href: '/sign-up',
        icon: 'tabler:arrow-right',
      },
      { text: 'Learn more', href: '#services' },
    ]}
  >
    <Fragment slot="title"> From Davao to the World — Your Digital Partner. </Fragment>

    <Fragment slot="subtitle"> Affordable, modern, and reliable web solutions for businesses that dream big. </Fragment>
  </Hero>

  <!-- Features2 Widget ************** -->

  <Features2
    title="About us"
    subtitle="We create modern, scalable, and affordable websites that help businesses grow beyond borders. From local startups to established enterprises, we deliver digital solutions tailored to your needs — combining global standards with the heart of Davao."
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- Stats Widget ****************** -->

  <Stats
    title="Discover the impressive impact of DWDS"
    subtitle="The numbers below reflect the trust our users have placed in us and the remarkable outcomes we've helped them achieve."
    stats={[
      { title: 'Websites', amount: '0' },
      { title: 'Websites Launched', amount: '0' },
      { title: 'User Ratings', amount: '0' },
      { title: 'Satisfied Clients', amount: '0' },
    ]}
  />

  <!-- Brands Widget ****************** -->

  <Brands
    title="Partnerships & Collaborations"
    subtitle="At DWDS, we believe in the power of collaboration to drive innovation and create exceptional experiences."
    icons={[]}
    images={[
      {
        src: 'https://cdn.pixabay.com/photo/2015/05/26/09/37/paypal-784404_1280.png',
        alt: 'Paypal',
      },
      {
        src: 'https://cdn.pixabay.com/photo/2021/12/06/13/48/visa-6850402_1280.png',
        alt: 'Visa',
      },
      {
        src: 'https://cdn.pixabay.com/photo/2013/10/01/10/29/ebay-189064_1280.png',
        alt: 'Ebay',
      },

      {
        src: 'https://cdn.pixabay.com/photo/2015/04/13/17/45/icon-720944_1280.png',
        alt: 'Youtube',
      },
      {
        src: 'https://cdn.pixabay.com/photo/2013/02/12/09/07/microsoft-80658_1280.png',
        alt: 'Microsoft',
      },
      {
        src: 'https://cdn.pixabay.com/photo/2015/04/23/17/41/node-js-736399_1280.png',
        alt: 'Node JS',
      },
      {
        src: 'https://cdn.pixabay.com/photo/2015/10/31/12/54/google-1015751_1280.png',
        alt: 'Google',
      },
      {
        src: 'https://cdn.pixabay.com/photo/2021/12/06/13/45/meta-6850393_1280.png',
        alt: 'Meta',
      },
      {
        src: 'https://cdn.pixabay.com/photo/2013/01/29/22/53/yahoo-76684_1280.png',
        alt: 'Yahoo',
      },
    ]}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    id="services"
    title="Our Services"
    subtitle="Discover a wide range of professionally designed website templates tailored for different industries and purposes — whether for business, portfolios, e-commerce, or blogs. Each template is built to be modern, customizable, and ready to help you establish a strong online presence."
    items={[
      {
        title: 'Website Development',
        description:
          'We design and build fast, responsive, and user-friendly websites tailored to your business goals. Whether you need a sleek company profile or a powerful online store, we ensure your website is modern, secure, and optimized to engage customers.',
        icon: 'flat-color-icons:template',
      },
      {
        title: 'Website Maintenance & Hosting',
        description:
          'Our team provides reliable hosting and continuous maintenance to keep your website running smoothly. This includes regular updates, security patches, backups, and performance optimization.',
        icon: 'flat-color-icons:support',
      },
      {
        title: 'Custom Web Applications',
        description:
          'We develop custom web applications built around your unique business needs — whether it’s an advanced e-commerce platform, a custom CRM system, or specialized tools to streamline your operations.',
        icon: 'flat-color-icons:idea',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- Features Widget *************** -->

  <Features
    id="features"
    title="Additional Services"
    subtitle="Enhance your website with extra features and support tailored to your business needs. From domain setup to performance optimization, we provide add-on solutions that ensure your online presence is professional, fast, and effective."
    columns={3}
    items={[
      {
  title: 'Domain & Email Setup',
  description:
    'We help you secure your domain and set up professional business email addresses for a stronger brand identity.',
  icon: 'tabler:network',
},
{
  title: 'Performance Optimization',
  description:
    'We optimize your website’s speed, images, and code to ensure fast loading times and a smooth user experience.',
  icon: 'tabler:adjustments-horizontal',
},
{
  title: 'Analytics & Tracking Setup',
  description:
    'We integrate tools like Google Analytics to track visitor behavior and provide insights to improve your website.',
  icon: 'tabler:brand-google-analytics',
},
{
  title: 'Social Media Integration',
  description:
    'We connect your website with Facebook, Instagram, TikTok, and other platforms to boost your online reach.',
  icon: 'tabler:social',
},
{
  title: 'Graphic Design & Branding',
  description:
    'From logos to social media graphics, we design visual assets that match your brand and enhance your website.',
  icon: 'tabler:photo',
},
{
  title: 'Basic Training & Documentation',
  description:
    'We provide simple guides and training so you can confidently update and manage your website on your own.',
  icon: 'tabler:file-type-doc',
},
    ]}
  />

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Frequently Asked Questions"
    items={[
      {
        title: "Why does my business need a website?",
        description: "A website is your digital storefront, helping customers find your products or services online anytime, anywhere."
      },
      {
        title: "Can a website help attract more customers?",
        description: "Yes. A well-designed website improves visibility on search engines, allowing potential customers to discover your business."
      },
      {
        title: "Does having a website improve credibility?",
        description: "Absolutely. Customers often trust businesses with professional websites more than those without an online presence."
      },
      {
        title: "How can a website help my business grow?",
        description: "A website enables online sales, lead generation, and marketing campaigns, helping your business reach new markets and increase revenue."
      },
      {
        title: "Is a website necessary for competing in my industry?",
        description: "Most competitors have websites, so having one ensures you stay relevant and competitive in the digital marketplace."
      },
      {
        title: "Can a website support customer engagement?",
        description: "Yes. Websites allow customers to contact you, learn about your services, read testimonials, and engage with your brand online."
      }
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </FAQs>

  <!-- Features3 Widget ************** -->

  <Features3
    title="Let us know how we can help"
    subtitle="We’re here to help and answer any question you might have."
    columns={3}
    items={[
      {
        title: 'Phone',
        icon: 'tabler:phone',
        callToAction: {
          
          text: 'Call us',
          href: '/contact',
          variant: 'link',
        },
      },
      {
        title: 'Email',
        icon: 'tabler:mail',
        callToAction: {
          
          text: 'Write to us',
          href: '/contact',
          variant: 'link',
        },
      },
      {
        title: 'Chat with us',
        icon: 'tabler:message-circle',
        callToAction: {
          target:"_blank",
          text: 'Start chatting',
          href: 'https://www.facebook.com/dwds.ph/',
          variant: 'link',
        },
      },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Sign Up Now',
        href: '/sign-up',
        icon: 'tabler:arrow-right',
      },
    ]}
  >
    <Fragment slot="title">Join Us on Our Journey</Fragment>

    <Fragment slot="subtitle">
      Discover a dynamic partnership where your goals drive our solutions, and together we create lasting impact.
    </Fragment>
  </CallToAction>
</Layout>
