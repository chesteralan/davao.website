---
import Layout from '~/layouts/PageLayout.astro';

import Features2 from '~/components/widgets/Features2.astro';
import Features from '~/components/widgets/Features.astro';

const metadata = {
  title: 'Services',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <!-- Features2 Widget ************** -->

  <Features2
    id="services"
    title="Our Services"
    subtitle="DWDS delivers comprehensive digital solutions—from website development and secure hosting to custom web applications. Our goal is to provide modern, reliable, and scalable platforms that drive growth and long-term success for your business."
    items={[
      {
        title: 'Website Development',
        description:
          'We design and build fast, responsive, and user-friendly websites tailored to your business goals. Whether you need a sleek company profile or a powerful online store, we ensure your website is modern, secure, and optimized to engage customers.',
        icon: 'flat-color-icons:template',
        link: '/services/website-development',
      },
      {
        title: 'Website Maintenance & Hosting',
        description:
          'Our team provides reliable hosting and continuous maintenance to keep your website running smoothly. This includes regular updates, security patches, backups, and performance optimization.',
        icon: 'flat-color-icons:support',
        link: '/services/website-maintenance-hosting',
      },
      {
        title: 'Custom Web Applications',
        description:
          'We develop custom web applications built around your unique business needs — whether it’s an advanced e-commerce platform, a custom CRM system, or specialized tools to streamline your operations.',
        icon: 'flat-color-icons:idea',
        link: '/services/custom-web-applications',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- Features Widget *************** -->

  <Features
    id="features"
    title="Additional Services"
    subtitle="Enhance your website with extra features and support tailored to your business needs. From domain setup to performance optimization, we provide add-on solutions that ensure your online presence is professional, fast, and effective."
    columns={3}
    items={[
      {
        title: 'Domain & Email Setup',
        description:
          'We help you secure your domain and set up professional business email addresses for a stronger brand identity.',
        icon: 'tabler:network',
      },
      {
        title: 'Performance Optimization',
        description:
          'We optimize your website’s speed, images, and code to ensure fast loading times and a smooth user experience.',
        icon: 'tabler:adjustments-horizontal',
      },
      {
        title: 'Analytics & Tracking Setup',
        description:
          'We integrate tools like Google Analytics to track visitor behavior and provide insights to improve your website.',
        icon: 'tabler:brand-google-analytics',
      },
      {
        title: 'Social Media Integration',
        description:
          'We connect your website with Facebook, Instagram, TikTok, and other platforms to boost your online reach.',
        icon: 'tabler:social',
      },
      {
        title: 'Graphic Design & Branding',
        description:
          'From logos to social media graphics, we design visual assets that match your brand and enhance your website.',
        icon: 'tabler:photo',
      },
      {
        title: 'Basic Training & Documentation',
        description:
          'We provide simple guides and training so you can confidently update and manage your website on your own.',
        icon: 'tabler:file-type-doc',
      },
    ]}
  />
</Layout>
